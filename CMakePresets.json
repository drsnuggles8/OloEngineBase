{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vs2022-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "toolset": "host=x64",
            "binaryDir": "${sourceDir}/build",
            "installDir": "${sourceDir}/install",
            "cacheVariables": {
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "ON",
                "CMAKE_C_STANDARD": "17",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                "CMAKE_C_EXTENSIONS": "ON",
                "CMAKE_DOTNET_TARGET_FRAMEWORK_VERSION": "v4.8.1",
                "CMAKE_CSharp_FLAGS": "/langversion:8",
                "USE_FOLDERS": "YES",
                "PREDEFINED_TARGETS_FOLDER": "Utilities/cmake"
            }
        },
        {
            "name": "vs2022-debug",
            "displayName": "Visual Studio 2022 Debug",
            "description": "Debug configuration using Visual Studio 2022",
            "inherits": "vs2022-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "OLO_ENABLE_LTO": "OFF",
                "OLO_ENABLE_PCH": "ON",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "vs2022-release",
            "displayName": "Visual Studio 2022 Release",
            "description": "Release configuration using Visual Studio 2022",
            "inherits": "vs2022-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "OLO_ENABLE_LTO": "ON",
                "OLO_ENABLE_PCH": "ON",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "vs2022-dist",
            "displayName": "Visual Studio 2022 Distribution",
            "description": "Distribution configuration using Visual Studio 2022",
            "inherits": "vs2022-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Dist",
                "OLO_ENABLE_LTO": "ON",
                "OLO_ENABLE_PCH": "ON",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "vs2022-debug-tests",
            "displayName": "Visual Studio 2022 Debug with Tests",
            "description": "Debug configuration with tests enabled",
            "inherits": "vs2022-debug",
            "cacheVariables": {
                "BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "displayName": "Build Debug",
            "configurePreset": "vs2022-debug",
            "configuration": "Debug"
        },
        {
            "name": "build-release",
            "displayName": "Build Release",
            "configurePreset": "vs2022-release",
            "configuration": "Release"
        },
        {
            "name": "build-dist",
            "displayName": "Build Distribution",
            "configurePreset": "vs2022-dist",
            "configuration": "Dist"
        },
        {
            "name": "build-debug-tests",
            "displayName": "Build Debug with Tests",
            "configurePreset": "vs2022-debug-tests",
            "configuration": "Debug"
        },
        {
            "name": "build-oloeditor-debug",
            "displayName": "Build OloEditor Debug",
            "configurePreset": "vs2022-debug",
            "configuration": "Debug",
            "targets": ["OloEditor"]
        },
        {
            "name": "build-oloeditor-release",
            "displayName": "Build OloEditor Release",
            "configurePreset": "vs2022-release",
            "configuration": "Release",
            "targets": ["OloEditor"]
        },
        {
            "name": "build-sandbox3d-debug",
            "displayName": "Build Sandbox3D Debug",
            "configurePreset": "vs2022-debug",
            "configuration": "Debug",
            "targets": ["Sandbox3D"]
        },
        {
            "name": "build-sandbox3d-release",
            "displayName": "Build Sandbox3D Release",
            "configurePreset": "vs2022-release",
            "configuration": "Release",
            "targets": ["Sandbox3D"]
        }
    ],
    "testPresets": [
        {
            "name": "test-debug",
            "displayName": "Test Debug",
            "configurePreset": "vs2022-debug-tests",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "dev-workflow",
            "displayName": "Development Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "vs2022-debug"
                },
                {
                    "type": "build",
                    "name": "build-debug"
                }
            ]
        },
        {
            "name": "release-workflow",
            "displayName": "Release Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "vs2022-release"
                },
                {
                    "type": "build",
                    "name": "build-release"
                }
            ]
        },
        {
            "name": "dist-workflow",
            "displayName": "Distribution Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "vs2022-dist"
                },
                {
                    "type": "build",
                    "name": "build-dist"
                }
            ]
        }
    ]
}